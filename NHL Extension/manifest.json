{
	"description": "Adds an icon with your selected NHL team's game information with real-time score and in-game data.",
  "manifest_version": 2,
  "name": "NHL Score Tracker",
	"offline_enabled": false,
	"short_name": "NhlScoreTracker",
  "version": "1.02",
	
	"background": {
		"scripts": ["jquery-1.10.2.js","moment.min.js", "moment-timezone-with-data.min.js","background.js"]
	},

  "browser_action": {
    "default_icon": "logos/nhl.png",
		"default_popup": "popup.html"
  },
	
	"icons": {
		"128": "logos/nhl.png"
	},

  "permissions": [
    "alarms",
		"contextMenus",
    "storage",
		"webRequest"
  ],
	
	"web_accessible_resources": [
		"logo/*"
	]
}